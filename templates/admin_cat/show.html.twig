{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}

    <div class="container py-4">
        <h1 class="text-center">Categorie</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ categorie.slug }}</td>
                </tr>
            </tbody>
        </table>
        <div class="row">

            <a href="{{ path('app_admin_cat_index') }}" class="col-6">back to list</a>

            <a href="{{ path('app_admin_cat_edit', {'id': categorie.id}) }}" class="col-6 text-end">edit</a>
        
        </div>
        
        {{ include('admin_cat/_delete_form.html.twig') }}
    </div>

{% endblock %}
